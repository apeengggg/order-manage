# ============================================
# Docker Environment Configuration
# Copy this file to .env before running docker-compose
# ============================================

# Application
APP_NAME="Order Management System"
APP_PORT=8080

# Database
DB_HOST=db
DB_USER=order_user
DB_PASS=order_password
DB_NAME=order_management
DB_PORT=3306
DB_ROOT_PASS=root_password

# phpMyAdmin
PMA_PORT=8081

# Storage Driver: "local" or "minio"
STORAGE_DRIVER=local

# MinIO Configuration (digunakan jika STORAGE_DRIVER=minio)
MINIO_ENDPOINT=minio:9000
MINIO_BUCKET=uploads
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_REGION=us-east-1
MINIO_USE_SSL=false
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
